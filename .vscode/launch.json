    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server/src/api/oidcp-app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to node",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/server/dist/src/",
            "remoteRoot": "/usr/src/app/dist/src/",
            "protocol":"inspector"
        }
    ]
}