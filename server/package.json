{
  "name": "server",
  "version": "0.10.0",
  "description": "Woleet.ID Server Node.js server",
  "scripts": {
    "setAPIVersion": "WOLEET_ID_SERVER_API_VERSION=$(cat ../swagger.yaml | grep 'version' | grep -oE '([[:digit:]]+.?)+')",
    "lint": "npx tslint src/**/*.ts",
    "check": "npx tsc --noEmit",
    "transpile": "npx tsc",
    "build": "npx tsc && cp -a assets/ dist/server/assets/",
    "start": "node dist/server/src",
    "dev": "npm run setAPIVersion; WOLEET_ID_SERVER_PRODUCTION=false DEBUG=id* npx ts-node-dev --files src/index.ts",
    "test": "npm run setAPIVersion; WOLEET_ID_SERVER_PRODUCTION=false npx mocha -r ts-node/register test/**/*.ts --exit --timeout 10000"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/koa": "^2.11.6",
    "@types/supertest": "^2.0.10",
    "@types/sequelize": "^4.28.9",
    "mocha": "^8.2.0",
    "supertest": "^6.0.0",
    "ts-node": "^6.2.0",
    "ts-node-dev": "^1.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@woleet/woleet-secure-module": "^1.3.0",
    "basic-auth": "^2.0.1",
    "chalk": "^4.1.0",
    "ioredis": "^4.19.1",
    "joi": "^13.7.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-cors": "^0.0.16",
    "koa-bodyparser": "^4.3.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^9.4.0",
    "koa-send": "^5.0.1",
    "loglevel": "^1.7.0",
    "lru-cache": "^6.0.0",
    "mustache": "^4.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.4.14",
    "oidc-provider": "^5.5.6",
    "openid-client": "^2.5.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "read": "^1.0.7",
    "redlock": "^4.1.0",
    "rxjs": "^6.5.5",
    "sequelize": "^4.44.4",
    "timestring": "^6.0.0"
  }
}
